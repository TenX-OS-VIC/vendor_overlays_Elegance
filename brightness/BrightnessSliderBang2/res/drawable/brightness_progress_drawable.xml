<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:gravity="fill_horizontal|center" android:id="@android:id/background">
		<selector>
			<item android:state_pressed="true">
				<shape android:tint="?android:colorAccent"
                               android:tintMode="multiply"
                                       android:shape="rectangle">
					<size android:height="35.0dip" />
					<solid android:color="#2c626161" />
    
				<corners 
  		android:bottomLeftRadius="10dp" 
			android:bottomRightRadius="25dp" 
			android:topLeftRadius="25dp" 
			android:topRightRadius="10dp" />
				</shape>
 
			</item>
			<item android:state_pressed="false">
				<shape android:tint="?android:colorAccent" android:shape="rectangle">
					<size android:height="35.0dip" />
					<solid android:color="#2c626161" />
 
					<corners 
  		android:bottomLeftRadius="10dp" 
			android:bottomRightRadius="25dp" 
			android:topLeftRadius="25dp" 
			android:topRightRadius="10dp" />
				</shape>
			</item>
		</selector>
	</item>
	<item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
		<scale android:scaleWidth="100%">
			<selector>
				<item android:state_pressed="true">
  <inset android:insetLeft="0.0dip"
       android:insetRight="0.0dip">
					<shape android:tintMode="multiply"
           
android:shape="rectangle">
						<size android:height="35.0dip" />
                            <gradient
                                android:startColor="@*android:color/tenx_shade_start_color"
                                android:endColor="@*android:color/tenx_shade_end_color"
                                android:angle="0" />
							<corners 
  		android:bottomLeftRadius="10dp" 
			android:bottomRightRadius="25dp" 
			android:topLeftRadius="25dp" 
			android:topRightRadius="10dp" />
					</shape>
  </inset >
				</item>
				<item android:state_pressed="false">
				      <inset android:insetLeft="0.0dip"
       android:insetRight="0.0dip">
					<shape android:tintMode="multiply"  android:shape="rectangle">
						<size android:height="35.0dip" />
                            <gradient
                                android:startColor="@*android:color/tenx_shade_start_color"
                                android:endColor="@*android:color/tenx_shade_end_color"
                                android:angle="0" />
								<corners 
  	android:bottomLeftRadius="10dp" 
			android:bottomRightRadius="25dp" 
			android:topLeftRadius="25dp" 
			android:topRightRadius="10dp" />
					</shape>
					      </inset >
				</item>
			</selector>
		</scale>
	</item>
</layer-list>
