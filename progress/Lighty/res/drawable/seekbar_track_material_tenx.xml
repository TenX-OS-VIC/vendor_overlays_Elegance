<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <size android:height="18dp" />
            <gradient
                android:endColor="@*android:color/tenx_shade_end_color"
                android:startColor="@*android:color/tenx_shade_start_color" />
        </shape>
    </item>
    <item
        android:end="2.5dp"
        android:gravity="fill_horizontal|center"
        android:start="2.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <size android:height="14dp" />
            <gradient
                android:endColor="#B3FFFFFF"
                android:startColor="#99FFFFFF" />
        </shape>
    </item>
</layer-list>
