<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@*android:id/background"
        android:gravity="fill_horizontal|center">
        <shape
            android:shape="rectangle"
            android:tint="?android:textColorPrimary">
            <corners android:radius="24dp" />
            <size android:height="18dp" />
            <solid android:color="#33000000" />
        </shape>
    </item>
    <item
        android:id="@*android:id/secondaryProgress"
        android:gravity="fill_horizontal|center">
        <scale android:scaleWidth="100%">
            <selector>
                <item
                    android:drawable="@*android:color/transparent"
                    android:state_enabled="false" />
                <item>
                    <shape
                        android:shape="rectangle"
                        android:tint="?android:colorControlActivated">
                        <corners android:radius="24dp" />
                        <size android:height="18dp" />
                        <solid android:color="#59000000" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
    <item
        android:id="@*android:id/progress"
        android:end="3.5dip"
        android:gravity="fill_horizontal|center"
        android:start="3.5dip">
        <scale android:scaleWidth="100%">
            <selector>
                <item
                    android:drawable="@*android:color/transparent"
                    android:state_enabled="false" />
                <item>
                    <shape android:shape="rectangle"
                           android:tintMode="multiply">
                        <corners android:radius="24dp" />
                        <size android:height="12dp" />
                        <gradient
                            android:endColor="@*android:color/tenx_shade_end_color"
                            android:startColor="@*android:color/tenx_shade_start_color" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>
