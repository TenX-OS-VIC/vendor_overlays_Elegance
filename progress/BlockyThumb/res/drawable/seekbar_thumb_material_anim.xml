<?xml version="1.0" encoding="utf-8" ?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorBackground" />
                    <size
                        android:width="12dp"
                        android:height="24dp" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="rectangle"
                    android:tint="?android:colorControlNormal">
                    <solid android:color="#66000000" />
                    <size
                        android:width="12dp"
                        android:height="24dp" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="4dp"
                        android:color="#FF000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorBackground" />
                    <size
                        android:width="12dp"
                        android:height="24dp" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="rectangle"
                    android:tint="?android:attr/colorAccent">
                    <solid android:color="#66000000" />
                    <size
                        android:width="12dp"
                        android:height="24dp" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="4dp"
                        android:color="#FF000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorBackground" />
                    <size
                        android:width="12dp"
                        android:height="24dp" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="rectangle"
                    android:tint="?android:attr/colorAccent">
                    <solid android:color="#66000000" />
                    <size
                        android:width="12dp"
                        android:height="24dp" />
                    <corners android:radius="24dp" />
                    <stroke
                        android:width="4dp"
                        android:color="#FF000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</animated-selector>
